{
  "name": "PerfectPixel by WellDoneCode",
  "version": "1.1",
  "description": "The extension help develop your websites with per pixel accuracy!",
  "background_page": "background.html",
  "options_page": "fancy-settings/source/index.html",
  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "icons": {"16": "icons/16.png",
           "48": "icons/48.png",
          "128": "icons/128.png" },
  "permissions": [
      "tabs", "http://*/*", "https://*/*", "unlimitedStorage"
  ],
  "content_scripts": [{
      "matches": ["<all_urls>"],
	  "css": [ "style.css", "jquery-ui-1.8.16.custom.css" ],
      "js": [ "jquery-1.6.2.min.js", "jquery-ui-1.8.16.custom.min.js", "pp-shared.js", "storage/pp-storage-localStorage.js", "storage/pp-storage-filesystem.js", "pp-content.js"]
  }]
}