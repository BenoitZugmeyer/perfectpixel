{
  "name": "PerfectPixel by WellDoneCode",
  "version": "1.0",
  "description": "The extension help develop your websites with per pixel accuracy!",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "icons": {"16": "icons/16.png",
           "48": "icons/48.png",
          "128": "icons/128.png" },
  "permissions": [
      "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": [ "pp-shared.js", "storage/pp-storage-localStorage.js", "pp-content.js"]
  }]
}