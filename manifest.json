{
  "name": "ChromePerfectPixel",
  "version": "1.0",
  "description": "The extension help develop your website with per pixel accuracy!",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "icons": {"16": "icons/16.png",
           "48": "icons/48.png",
          "128": "icons/128.png" },
  "permissions": [
      "tabs", "http://*/*", "https://*/*"
  ]
}