{
  "name": "ChromePerfectPixel",
  "version": "0.11",
  "description": "Semitransparent image overlay over top of the developed html",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "permissions": [
      "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pp-content.js", "pp-storage.js", "pp-shared.js"]
    }
  ]
}