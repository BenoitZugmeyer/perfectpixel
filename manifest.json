{
  "name": "ChromePerfectPixel",
  "version": "0.11",
  "description": "Semitransparent image overlay over top of the developed html",
  "background_page": "background.html",
  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "icons": {"16": "icons/16.png",
           "48": "icons/48.png",
          "128": "icons/128.png" },
  "permissions": [
      "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pp-content.js", "pp-storage.js", "pp-shared.js"]
    }
  ]
}